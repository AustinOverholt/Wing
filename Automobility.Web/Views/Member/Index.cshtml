@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<br />

<div ng-controller="homeController as homeCtrl" ng-cloak>
    <!-- start navbar -->
    <md-sidenav class="md-sidenav-left" md-component-id="left" md-whiteframe="4">
        <!-- header -->
        <md-toolbar class="md-theme-light">
            <div class="md-toolbar-tools">
                <span><md-icon md-font-icon="fa-user-circle" class="fa fa-2x fa-md md-icon bp profileIcon"> </md-icon> Rick Barnes</span>
            </div>
            <div class="div-56">

            </div>
        </md-toolbar>
        <!-- menu options -->
        <md-content layout-margin class="container">
            <md-button class="md-primary">Profile</md-button>
            <md-button class="md-primary">History</md-button>
            <md-button class="md-primary">Settings</md-button>
            <md-button class="md-primary">Legal</md-button>
            <md-button class="md-primary">Logout</md-button>
        </md-content>
    </md-sidenav>
    <!-- end navbar -->
    <!-- start search input -->
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <span><md-icon ng-click="homeCtrl.toggleLeft()" md-font-icon="fa-bars" class="blackText fa fa-2x fa-md md-icon-button"></md-icon></span>
            </div>
        </div>
        <div class="row">
            <br />
            <br />
            <br />
            <div class="col-xs-12">
                <form ng-submit="$event.preventDefault()">
                    <md-autocomplete class="autocomplete" md-no-cache="homeCtrl.noCache" md-selected-item="homeCtrl.selectedItem" md-search-text-change="homeCtrl.searchTextChange(homeCtrl.searchText)" md-search-text="homeCtrl.searchText" md-selected-item-change="homeCtrl.selectedItemChange(item)" md-items="item in homeCtrl.querySearch(homeCtrl.searchText)" md-item-text="item.display" md-min-length="0" placeholder="Where would you like to go?">
                        <md-item-template>
                            <span md-highlight-text="homeCtrl.searchText" md-highlight-flags="^i">{{item.display}}</span>
                        </md-item-template>
                        <md-not-found>
                            No states matching "{{homeCtrl.searchText}}" were found.
                            <a ng-click="homeCtrl.newState(homeCtrl.searchText)">Create a new one!</a>
                        </md-not-found>
                    </md-autocomplete>
                    @*<md-input-container class="maxWidth text-center" layout-align="center center">
                        <label>Where would you like to go?</label>
                        <input type="text" ng-model="homeCtrl.search" class="md-input" />
                    </md-input-container>*@
                </form>
            </div>
        </div>
    </div>
    <br />


    <!-- end search input -->
    <div class="myPadding">
        <h2 class="text-center">Plan your trip</h2>
        <div class="grid-list">
            <md-grid-list md-cols-xs="2" md-cols-sm="2" md-cols-md="2" md-cols-gt-md="2" md-row-height-gt-md="1:1" md-row-height="2:2" md-gutter="12px" md-gutter-gt-sm="8px">
                <md-grid-tile class="green">
                    <md-icon md-font-icon="fa-futbol-o" class="fa fa-5x"></md-icon>
                    <md-grid-tile-footer>
                        <h3>Olympics</h3>
                    </md-grid-tile-footer>
                </md-grid-tile>

                <md-grid-tile class="yellow" ng-click="homeCtrl.showDetails('rest')">
                    <md-icon md-font-icon="fa-cutlery" class="fa fa-5x"></md-icon>
                    <md-grid-tile-footer>
                        <h3>Food</h3>
                    </md-grid-tile-footer>
                </md-grid-tile>

                <md-grid-tile class="red" ng-click="homeCtrl.showDetails('landmarks')">
                    <md-icon md-font-icon="fa-binoculars" class="fa fa-5x"></md-icon>
                    <md-grid-tile-footer>
                        <h3>Landmarks</h3>
                    </md-grid-tile-footer>
                </md-grid-tile>

                <md-grid-tile class="blue">
                    <md-icon md-font-icon="fa-thumbs-o-up" class="fa fa-5x"></md-icon>
                    <md-grid-tile-footer>
                        <h3>Fun</h3>
                    </md-grid-tile-footer>
                </md-grid-tile>
            </md-grid-list>
        </div>
    </div>
</div>

<!-- cateogry details modal -->
<div id="detailsModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body" ng-repeat="model in homeCtrl.model">
                        <!--<img class="commentImg" ng-src="/Images/CocaCola.jpg" style="height: 3em; width: 2.75em; margin: 0 auto; display: block; margin-top:35%;">-->
                        <img src="{{model.Image}}" style="height:100%; width:auto;" />
                        <div>{{model.Name}}</div>
                        <div>{{model.Address}}</div>
                        <div>{{model.City}}</div>
                        <div>{{model.Price}}</div>
                        <p>{{model.Distance}}</p>
                        <p>{{model.PhoneNumber}}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>