
@{
    ViewBag.Title = "SignUp";
}

<div class="container">
    <div class="header">
        <a href="index.html" class="logo">
            <img src="images/logo-dark.png" class="mr-2 mb-1 img-fluid" />
            React
        </a>
        <h4>Set up your new account today.</h4>
        <p>
            30-day money-back guarantee that starts after your first payment.
        </p>
    </div>

    <div class="wrapper">
        <div class="formy">
            <form role="form">
                <div class="form-group">
                    <label for="name">Your name</label>
                    <input type="text" class="form-control" id="name" />
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" />
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> You have read & agree to the
                        <a href="#">Terms of service</a>.
                    </label>
                </div>
                <div class="text-center mt-5">
                    <input type="submit" class="submit btn-block btn-shadow btn-shadow-info" value="Create account">
                </div>
            </form>
        </div>
    </div>
    <div class="already-account">
        Already have an account?
        <a href="signin.html">Sign in here</a>
    </div>
</div>

